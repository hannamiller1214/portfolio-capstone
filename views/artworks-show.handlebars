<div class="row justify-content-between mt-4 ml-n4">

  <div class="col-lg-9">
    <img class="img-fluid w-110 rounded mb-3 art" src="{{artwork.imgUrl}}" alt="Card image cap">
    <h2>{{artwork.name}}</h2>
    <div class="mt-n2 lead"><strong><em>{{artwork.title}}</strong></em></div>
    <div class="mt-n1 text-dark lead">{{artwork.desc}}</div>
    <div class="text-right">
      <a href="/artworks/{{artwork.id}}/edit" class="btn btn-primary">Edit</a>
    </div>
  </div>

  <div class="col-lg-3 mt-5 mb-5">
      <div class="d-flex flex-row-reverse flex-column justify-content-between">
          <b>Inquiries</b>
          <a href="/artworks/{{artwork.id}}/inquiries/new" class="btn btn-primary btn-sm">Inquire</a>
      </div>
      <div class="list-group mt-4 float-left">
        {{#each artwork.Inquiries}}
          <div class="list-group-item float-left">
            <div class="float-left lead">
              <strong>{{this.name}}</strong>
            </div>
            <p class="text-center">{{this.comment}}</p>
            <div class="float-right">
              <form class="form-inline" action="/artworks/{{../artwork.id}}/inquiries/{{this.id}}?_method=DELETE" method="post">
                <button type="submit" class="btn btn-link btn-sm">Remove</button>
              </form>
            </div>
          </div>
        {{/each}}
      </div>
  </div>

</div>
