<div class="row mt-4">
  <div class="col-lg-6 offset-lg-3">
    <div class="card">
      <div class="card-body">
        <div class="card-title">
          <h3>Update Artwork</h3>
        </div>
        <div class="card-text">
          <form action="/artworks/{{artwork.id}}?_method=PUT" method="post">
            <div class="form-group">
              <label for="name">Name</label>
              <input name="name" class="form-control" placeholder="John Doe" value="{{artwork.name}}" />
            </div>
            <div class="form-group">
              <label for="title">Title</label>
              <input name="title" class="form-control" placeholder="Starry Night" value="{{artwork.title}}" />
            </div>
            <div class="form-group">
              <label for="desc">Medium</label>
              <input name="desc" class="form-control" placeholder="The medium of your artwork." value="{{artwork.desc}}" />
            </div>
            <div class="form-group">
              <label for="desc">Image Url</label>
              <textarea name="imageUrl" class="form-control" placeholder="The url of your artwork.">{{artwork.imgUrl}}</textarea>
            </div>
            <div class="pt-4 text-right">
              <a href="/artworks/{{artwork.id}}" class='text-muted mr-2 mt-n4 mb-2'>Cancel</a>
              <button type="submit" class="btn btn-primary mt-n4 mb-2" name="button">Update</button>
            </div>
          </form>
          <div class="mt-n5">
            <form action="/artworks/{{artwork.id}}?_method=DELETE" method="POST">
              <button type="submit" class='btn btn-danger mt-1.5'>Delete</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
